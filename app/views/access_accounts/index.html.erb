<div class="page-header">
  <%= link_to new_access_account_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Access Account
  <% end %>
  <h1>Access Accounts</h1>
</div>

<div class="table-responsive">
  <table class="table table-table-condensed table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Approver</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @access_accounts) do |access_account| %>
        <td><%= access_account.name %></td>
        <td><%= access_account.approvable ? access_account.approver.name : 'N/A' %></td>
        <td>
          <%= link_to 'Show', access_account %> |
          <%= link_to 'Edit', edit_access_account_path(access_account) %> |
          <%= link_to 'Destroy', access_account, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
