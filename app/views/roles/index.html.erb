<div class="page-header">
  <%= link_to new_role_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Role
  <% end %>
  <h1>Listing roles</h1>
</div>

<div class="table-responsive">
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @roles) do |role| %>
        <td><%= role.name %></td>
        <td>
          <%= link_to 'Show', role %> |
          <%= link_to 'Edit', edit_role_path(role) %> |
          <%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
<%= page_entries_info @roles, entry_name: 'item' %>