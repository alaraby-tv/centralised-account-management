<div class="nested-fields">
  <div class="form-group">
    <%= f.label :permission, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.grouped_collection_select :permission_id, AccessAccount.all, :permissions, :name, :id, :name, { prompt: true }, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to_remove_association 'Remove', f, class: "btn btn-danger" %>
    </div>
  </div>
</div>