<div class="page-header">
  <h2>Request No. <%= @request.id %></h2>
</div>
<%= form_for(@request, url: wizard_path, method: :put, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @request.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h4>

      <ul>
      <% @request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :end_user, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <h5><%= @request.end_user.name %></h5>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :permissions, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <% @request.access_requests.each do |access_request| %>
        <div class="panel panel-success">
          <div class="panel-heading">
            <strong><%= access_request.access_account.name %></strong>
          </div>
          <div class="panel-body">
            <%= f.fields_for :access_request do |ar| %>
              <%= ar.collection_check_boxes :permission_ids, access_request.access_account.permissions, :id, :name, class: 'form-control' do |box| %>
                <%= box.label { box.check_box + " " + box.text } %><br>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to "Back", previous_wizard_path, class: "btn btn-default" %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>