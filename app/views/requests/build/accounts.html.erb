<div class="page-header">
  <h2>Request No. <%= @request.id %></h2>
</div>
<%= form_for(@request, url: wizard_path, method: :put, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @request.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h4>

      <ul>
      <% @request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :end_user, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <h5><%= @request.end_user.name %></h5>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :access_accounts, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <table class="table table-table-condensed">
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody class="access_account">
          <%= f.fields_for :access_requests do |builder| %>
            <%= render 'access_request_fields', f: builder %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to_add_association f, :access_requests, class: "btn btn-success", data: { association_insertion_node: '.access_account', association_insertion_method: :append } do %>
        Add Account
      <% end %>
      <%= f.submit "Next", class: "btn btn-primary" %>
    </div>
  </div>  
<% end %>