<div class="nested-fields">
  <div class="container">
    <hr>
    <div class="form-group">
        <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <div class="input-group">
          <%= f.collection_select :access_account_id, AccessAccount.all, :id, :name, { prompt: true }, class: "form-control" %>
          <span class="input-group-btn">
            <%= link_to_remove_association f, class: "btn btn-danger" do %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <% end %>
          </span>
        </div>
      </div> 
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2">
        <%= link_to_add_association f, :access_request_permissions, class: "btn btn-sm btn-warning", data: { association_insertion_method: :append } do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          Permission
        <% end %>
      </div> 
      <%= f.fields_for :access_request_permissions do |builder| %>
        <%= render 'access_request_fields', f: builder %>
      <% end %>
    </div>
  </div>
</div>
