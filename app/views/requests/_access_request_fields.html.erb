<div class="nested-fields">
  <div class="form-group">
    <%= f.label :access_account, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :access_account_id, AccessAccount.all, :id, :name, { prompt: true }, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to_remove_association 'Remove', f, class: "btn btn-danger" %>
    </div>
  </div>
</div>